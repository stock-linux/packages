name=libpng
version=1.6.40
release=1
description="The libpng package contains libraries used by other programs for reading and writing PNG files."
source=(https://downloads.sourceforge.net/$name/$name-$version.tar.xz https://downloads.sourceforge.net/sourceforge/libpng-apng/libpng-$version-apng.patch.gz)
packager=Skythrew
pre_build() {
    gzip -cd ../libpng-$version-apng.patch.gz | patch -p1
}